---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Ryan Barley">
  <section class="min-h-screen hero bg-base-200">
    <div class="flex-col hero-content lg:flex-row">
      <img
        src="photo.png"
        class="max-w-sm rounded-lg lg:max-h-screen max-h-0"
      />
      <div class="max-w-lg space-y-6">
        <h1 class="text-5xl font-bold text-left">
          <span class="text-accent">Hi</span>, <br />I'm Ryan
        </h1>
        <p>
          I'm a full-stack web developer, data person, consultant and all-round
          software generalist based in the woods of New England
        </p>
        <div class="mockup-code">
          <pre data-prefix="$"><code>npx hello-ryan</code></pre>
        </div>
        <a href="/contact" class="btn btn-primary">Or, get in touch</a>
      </div>
    </div>
  </section>
</Layout>
